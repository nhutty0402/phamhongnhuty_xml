<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/quanan"
           xmlns="http://example.com/quanan"
           elementFormDefault="qualified">

    <!-- Phần tử gốc -->
    <xs:element name="QUANAN">
        <xs:complexType>
            <xs:sequence>

                <!-- BẢNG BAN -->
                <xs:element name="BAN" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="TENBAN" type="xs:string"/>
                            <xs:element name="SOBAN" type="xs:integer"/>
                        </xs:sequence>
                        <xs:attribute name="MABAN" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>

                <!-- BẢNG MON -->
                <xs:element name="MON" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="TENMON" type="xs:string"/>
                            <xs:element name="GIA" type="xs:float"/>
                            <xs:element name="HINHANH" type="xs:string"/>
                        </xs:sequence>
                        <xs:attribute name="MAMON" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>

                <!-- BẢNG NHANVIEN -->
                <xs:element name="NHANVIEN" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="TENNV" type="xs:string"/>
                            <xs:element name="SDT" type="xs:string"/>
                            <xs:element name="DIACHI" type="xs:string"/>
                            <xs:element name="GIOITINH" type="xs:string"/>
                            <xs:element name="USERNAME">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:minLength value="6"/>
                                        <xs:maxLength value="50"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="PASSWORD">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:minLength value="10"/>
                                        <xs:maxLength value="50"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="MANV" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>

                <!-- BẢNG HOADON -->
                <xs:element name="HOADON" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="NGAYLAP" type="xs:date"/>
                            <xs:element name="TONGTIEN" type="xs:float"/>
                            <xs:element name="MABAN_REF" type="xs:string"/>
                            <xs:element name="MANV_REF" type="xs:string"/>
                            <xs:element name="MAMON_REF" type="xs:string"/>
                        </xs:sequence>
                        <xs:attribute name="SOHD" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>

            </xs:sequence>
        </xs:complexType>

        <!-- Khóa chính -->
        <xs:key name="BanKey">
            <xs:selector xpath="BAN"/>
            <xs:field xpath="@MABAN"/>
        </xs:key>

        <xs:key name="MonKey">
            <xs:selector xpath="MON"/>
            <xs:field xpath="@MAMON"/>
        </xs:key>

        <xs:key name="NhanVienKey">
            <xs:selector xpath="NHANVIEN"/>
            <xs:field xpath="@MANV"/>
        </xs:key>

        <xs:key name="HoaDonKey">
            <xs:selector xpath="HOADON"/>
            <xs:field xpath="@SOHD"/>
        </xs:key>

        <!-- Khóa ngoại -->
        <xs:keyref name="BanRef" refer="BanKey">
            <xs:selector xpath="HOADON"/>
            <xs:field xpath="MABAN_REF"/>
        </xs:keyref>

        <xs:keyref name="NhanVienRef" refer="NhanVienKey">
            <xs:selector xpath="HOADON"/>
            <xs:field xpath="MANV_REF"/>
        </xs:keyref>

        <xs:keyref name="MonRef" refer="MonKey">
            <xs:selector xpath="HOADON"/>
            <xs:field xpath="MAMON_REF"/>
        </xs:keyref>

    </xs:element>
</xs:schema>
